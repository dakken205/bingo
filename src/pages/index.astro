---
import BaseLayout from "../layouts/Base.astro";
---

<BaseLayout>
  <main>
    <h1>社情ビンゴ</h1>
    <p>社会情報科学部生のためのあるあるビンゴ</p>
    <div class="button-container">
      <a href="/bingo/roulette"> <button>主催者はこちら</button></a>
      <a href="/bingo/card"><button>参加者はこちら</button></a>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100dvh;
    gap: 1rem;
  }

  a,
  button {
    cursor: pointer;
  }

  button {
    padding: 15px;
    border-radius: 5px;
    border: none;
    background-color: #eee;
    color: #333;
    transition: all 0.2s ease-in-out;
  }

  button:hover {
    background-color: #ddd;
  }

  .button-container {
    margin-top: 30px;
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }
</style>
